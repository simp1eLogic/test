#!/bin/bash
FILE_NAME=`date +%y%m%d-%H%M%S`
cd ~/work/acad_lhc
svn update
FILE_NAME=r`svn info|awk '/Revision/' | awk '{print $2}'`_$FILE_NAME
CURR_REV=`svn info|awk '/Revision/' | awk '{print $2}'`
cd ~/backup/
LAST_REV=`find . -name "acad_lhc_r*.tar" | cut --delimiter=_ -f3 |cut -c2- | sort -n | tail -n 1`

if [ "$CURR_REV" -eq "$LAST_REV" ]
then
echo "equal"
exit 0
fi

if [ "$CURR_REV" -gt "$LAST_REV" ]
then
echo "greater than"
rm acad_lhc_current.tar
tar cvf acad_lhc_$FILE_NAME.tar /home/svn/acad_lhc/
cp acad_lhc_$FILE_NAME.tar acad_lhc_current.tar
fi

if [ "$CURR_REV" -lt "$LAST_REV" ]
then
echo "less than:somthing wrong!!!"
exit 0
fi

